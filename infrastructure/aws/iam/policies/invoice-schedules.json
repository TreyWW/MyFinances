{
  "name": "These go on the user that has AWS_SCHEDULES_ACCESS_KEY_ID and AWS_SCHEDULES_SECRET_ACCESS_KEY",
  "description": [
    "To use this, copy all of 'POLICY' below (only the dictionary, not the 'policy' key",
    "Then go to aws and press 'Add Permissions' -> 'Create inline policy'"
  ],
  "policies": [
    {
      "policy": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Sid": "VisualEditor0",
            "Effect": "Allow",
            "Action": [
              "events:EnableRule",
              "iam:UntagRole",
              "iam:ListRoleTags",
              "scheduler:GetSchedule",
              "events:CreateApiDestination",
              "scheduler:TagResource",
              "events:PutRule",
              "iam:TagRole",
              "events:DescribeConnection",
              "iam:CreateRole",
              "scheduler:UntagResource",
              "scheduler:DeleteSchedule",
              "events:UpdateApiDestination",
              "iam:PassRole",
              "events:ListRuleNamesByTarget",
              "scheduler:UpdateSchedule",
              "scheduler:ListSchedules",
              "events:ListRules",
              "scheduler:GetScheduleGroup",
              "events:RemoveTargets",
              "events:ListTargetsByRule",
              "events:DescribeApiDestination",
              "events:DisableRule",
              "events:PutEvents",
              "iam:GetRole",
              "events:DescribeRule",
              "events:ListApiDestinations",
              "events:ListConnections",
              "events:DeauthorizeConnection",
              "iam:ListRoles",
              "scheduler:ListScheduleGroups",
              "scheduler:DeleteScheduleGroup",
              "scheduler:CreateScheduleGroup",
              "scheduler:ListTagsForResource",
              "events:TagResource",
              "events:DeleteRule",
              "events:PutTargets",
              "events:CreateConnection",
              "events:DeleteApiDestination",
              "scheduler:CreateSchedule",
              "events:ListTagsForResource",
              "events:DeleteConnection",
              "iam:UpdateRole",
              "events:UpdateConnection",
              "events:UntagResource",
              "states:*",
              "iam:ListPolicyTags",
              "iam:ListEntitiesForPolicy",
              "iam:GetPolicy",
              "iam:GetGroupPolicy",
              "iam:GetRolePolicy",
              "iam:GetUserPolicy",
              "iam:AttachGroupPolicy",
              "iam:AttachRolePolicy",
              "iam:AttachUserPolicy",
              "iam:CreatePolicy",
              "iam:CreatePolicyVersion",
              "iam:ListRolePolicies",
              "iam:PutRolePolicy",
              "iam:CreateServiceLinkedRole",
              "iam:ListPolicies"
            ],
            "Resource": "*"
          },
          {
            "Sid": "VisualEditor1",
            "Effect": "Allow",
            "Action": [
              "secretsmanager:GetSecretValue",
              "secretsmanager:DescribeSecret",
              "secretsmanager:PutSecretValue",
              "secretsmanager:CreateSecret",
              "secretsmanager:DeleteSecret",
              "secretsmanager:UpdateSecret"
            ],
            "Resource": "arn:aws:secretsmanager:*:*:secret:events!connection/*"
          }
        ]
      }
    },
    {
      "policy": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Sid": "Allow sending emails to users",
            "Effect": "Allow",
            "Action": [
              "ses:SendEmail",
              "ses:SendTemplatedEmail",
              "ses:SendRawEmail"
            ],
            "Resource": [
              "arn:aws:ses:*"
            ]
          },
          {
            "Sid": "Allow send quota access",
            "Effect": "Allow",
            "Action": "ses:GetSendQuota",
            "Resource": "*"
          }
        ]
      }
    }
  ]
}